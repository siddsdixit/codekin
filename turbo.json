{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "build/**"]
		},
		"bundle": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"watch:bundle": {
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"watch:tsc": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"]
		},
		"lint": {
			"dependsOn": ["^build"]
		},
		"check-types": {
			"dependsOn": ["^build"]
		},
		"format": {
			"outputs": [],
			"cache": false
		},
		"clean": {
			"cache": false
		}
	}
}
